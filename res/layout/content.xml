<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" android:layout_height="match_parent" 
    android:orientation="vertical" android:baselineAligned="false">
	<TextView android:id="@+id/content_title" android:background="@android:color/white" 
		android:layout_width="match_parent" android:layout_height="wrap_content" 
		android:padding="10dp" android:gravity="left|center_vertical" 
		android:textColor="@android:color/black" android:textSize="@dimen/large_text_size"/>
	<WebView android:id="@+id/content_webview" 
	    android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
